@page "/"

<h3>Hello @GetUserName(), welcome to <b>blazor</b></h3>

@*<button @onclick="ChangeName">
    Change Name
</button>*@

<button @onclick="@(() => { userName = "Peter";})">
    Change the Name
</button>

<p>Sum: @AddInt()</p>

@if (testNum == 1)
{
    <p>num is 1</p>
}
else
{
    <p>num is NOT 1, at all.</p>
}

@foreach (var name in names)
{
    <span> @(name) -</span>
}

@for(int i = 0;i < 11; i++)
{
    <p>@(i)</p>
}

@code {
    private string userName = "Does the GetUserName Function Run??";
    private int testNum = 10;
    private List<string> names;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        names = new List<string>
        {
            "john",
            "mary",
            "harry",
            "tom",
            "jerry",
            "mike",
            "sally",
            "steve",
            "chris",
        };
    }

    private string GetUserName()
    {
        return userName + "Thomas";
    }

    private int x = 5;
    private int y = 10;

    private int AddInt()
    {
        return x + y;
    }

    private void ChangeName()
    {
        userName = "Peter";
    }
}